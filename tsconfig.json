{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "dom",
            "es6",
            "es2019"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
